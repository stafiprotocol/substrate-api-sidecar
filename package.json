{
  "version": "1.0.0",
  "name": "substrate-api-sidecar",
  "description": "REST service that makes it easy to interact with blockchain nodes built using Substrate's FRAME framework.",
  "homepage": "https://github.com/stafiprotocol/substrate-api-sidecar#readme",
  "author": "Stafi Technologies <technical@stafi.io>",
  "license": "GPL-3.0-or-later",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "bin": {
    "substrate-api-sidecar": "./build/src/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stafiprotocol/substrate-api-sidecar"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": {
    "url": "https://github.com/stafiprotocol/substrate-api-sidecar/issues"
  },
  "scripts": {
    "build": "rimraf build/ && tsc",
    "build:calc": "bash ./calc/build.sh",
    "build:docker": "docker build -t substrate-api-sidecar .",
    "build:docs": "(cd docs && yarn && yarn build)",
    "main": "node ./build/src/main.js",
    "lint": "tsc && eslint . --ext ts",
    "deploy": "yarn build && standard-version",
    "start": "yarn run build && yarn run main",
    "start:log-rpc": "yarn run build && NODE_ENV=test yarn run main ",
    "dev": "tsc-watch --onSuccess \"yarn run main\"",
    "test": "jest --silent"
  },
  "dependencies": {
    "@polkadot/api": "^2.3.1",
    "@polkadot/util-crypto": "^3.6.1",
    "@substrate/calc": "file:./calc/pkg",
    "confmgr": "^1.0.6",
    "express": "^4.17.1",
    "express-winston": "^4.0.5",
    "http-errors": "^1.8.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/express-serve-static-core": "^4.17.13",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^26.0.15",
    "@types/morgan": "^1.9.1",
    "@types/triple-beam": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^26.6.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.3"
  },
  "keywords": [
    "substrate",
    "api",
    "sidecar",
    "polkadot",
    "kusama"
  ]
}
